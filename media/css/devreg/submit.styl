@import 'lib';

.soon {
    color: $note-gray;
    font-size: 12px;
    font-weight: bold;
}

h2 .soon {
    margin-left: 4px;
}

#upload-file {
    .island {
        border-box();
        float: left;
        width: 48%;
        + .island {
            float: right;
        }
    }
    .learn-mdn {
        margin-top: 30px;
    }
    .soon {
        display: block;
        text-align: center;
    }
}

#submit-choose {
    .button {
        border-bottom: $light-gray 2px solid;
        margin-top: 15px;
        font-weight: 300;
        font-size: 28px;
        padding: 15px 30px;

        &:hover {
            border-bottom-color: darken($light-gray, 5%);
        }
        &:active {
            border-bottom: 0;
            margin-bottom: 2px;
        }
    }
    strong {
        color: #222;
    }
    ul {
        color: $medium-gray;
        list-style: disc;
        margin-left: 15px;
    }
    p {
        text-align: center;
        padding-bottom: 0;

        + p {
            margin-top: 10px;
        }
    }
    ul {
        list-style: inside;
        margin: 15px 0 0 15px;

        li + li {
            margin-top: 5px;
        }
    }
}

.listing-footer {
    .or {
        color: #bbb;
        font: italic 15px/18px Georgia, serif;
        padding: 0 6px 0 4px;
        vertical-align: middle;
    }
}

.learn-mdn {
    display: none;

    a {
        border-radius: 4px;
        background: url(../../img/mkt/logos/dino.png) 10px 50% no-repeat #def;
        border: 1px solid rgba($border-blue,.6);
        display: inline-block;
        line-height: 25px;
        min-height: 25px;
        padding: 10px 10px 10px 52px;

        &:hover {
            background-color: darken(#def, 5%);
            border-color: darken($border-blue, 5%);
            color: darken($link, 10%);
            text-decoration: none;
        }
    }
    &.active {
        display: block;
    }
}

#submit-payment-type {
    .error {
        margin-bottom: 15px;

        + .wrapper {
            margin-left: -15px;
        }
    }
    .wrapper {
        border-box();
        display: inline-block;
        padding-left: 15px;
        width: 25%;
        a.choice, span.unclickable {
            margin-bottom: 0;
            opacity: .9;
            padding: 180px 10px 20px;
            text-align: center;
            text-decoration: none;
background-position: 50% 25px;
background-size: contain;
background-repeat: no-repeat;

            &[id$="-responsive"] {
                background-image: url(../../img/developers/responsive_disabled.png);
                &:hover {
                    background-image: url(../../img/developers/responsive_hover.png);
                }
                &.selected {
                    background-image: url(../../img/developers/responsive.png);
                }
            }
            &[id$="-desktop"] {
                background-image: url(../../img/developers/desktop_disabled.png);
                &:hover {
                    background-image: url(../../img/developers/desktop_hover.png);
                }
                &.selected {
                    background-image: url(../../img/developers/desktop.png);
                }
            }
            &[id$="-tablet"] {
                background-image: url(../../img/developers/tablet_disabled.png);
                &:hover {
                    background-image: url(../../img/developers/tablet_hover.png);
                }
                &.selected {
                    background-image: url(../../img/developers/tablet.png);
                }
            }
            &[id$="-mobile"] {
                background-image: url(../../img/developers/mobile_disabled.png);
                &:hover {
                    background-image: url(../../img/developers/mobile_hover.png);
                }
                &.selected {
                    background-image: url(../../img/developers/mobile.png);
                }
            }
            div {
                color: #484848;
            }
            .listing-footer input {
                pointer-events: none;
            }
        }
    }
    .listing-footer {
        background: $faint-gray;
        border-color: $light-gray;
        border-radius: 0 0 3px 3px;
        margin: 15px -10px -20px;
        padding: 0 10px 10px;
        text-align: center;
    }
    input {
        margin-top: 15px;
    }
}

#upload-file.spacer {
    margin-top: 60px;
}

#upload-platforms {
    border-top: 1px dotted $shadow-blue;
    margin-top: 20px;
    padding-top: 20px;

    label {
        display: block;
        padding: 15px;
        &.disabled {
            color: #999;
            cursor: not-allowed;
        }
    }
}

#submit-next-steps {
    ol.next-steps {
        list-style: decimal inside;
    }
    li {
        line-height: 20px;

        &.done {
            color: $note-gray;

            span {
                text-decoration: line-through;
            }
            &:after {
                color: $green;
                content: "\2714";
                margin-left: 5px;
                text-decoration: none;
            }
        }
    }
    ul.other-options {
        list-style: disc inside;
    }
    .listing-footer {
        margin-top: 20px;

        span {
            margin-right: 10px;
        }
    }
}
